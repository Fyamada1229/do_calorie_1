<div class="main">
  <div class="main__center">
    <h2 class="new_id">SIGN UP!</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :ニックネーム %> <em></em><br />
        <%= f.text_field :nickname, autofocus: true, maxlength: "10", :size => "25*25" ,placeholder: "最大10文字まで"%>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", :size => "25*25"%>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em class="new_pass_id">(<%= @minimum_password_length %>文字以上のパスワード)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", :size => "25*25"%>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", :size => "25*25"%>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"sign_up"%>
      </div>
  <% end %>
    <%= render "devise/shared/links" %>
  </div>
  
</div>


